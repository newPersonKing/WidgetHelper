<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_bg"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <com.ruffian.library.widget.REditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawablePadding="4dp"
            android:hint="请输入账号"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#122a2d"
            android:textColorHint="#ccc"
            app:border_color_normal="@color/colorAccent"
            app:border_width_normal="1dp"
            app:corner_radius="4dp"
            app:icon_src_normal="@mipmap/icon_account" />

        <com.ruffian.library.widget.REditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:drawablePadding="4dp"
            android:hint="请输入账号"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#122a2d"
            android:textColorHint="#ccc"
            app:border_color_normal="@color/colorAccent"
            app:border_dash_gap="8dp"
            app:border_dash_width="8dp"
            app:border_width_normal="1dp"
            app:corner_radius="4dp"
            app:icon_src_normal="@mipmap/icon_account" />

        <com.ruffian.library.widget.REditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:drawablePadding="4dp"
            android:hint="请输入账号"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#122a2d"
            android:textColorHint="#ccc"
            app:background_normal="#6e919090"
            app:background_pressed="@color/colorAccent"
            app:corner_radius_top_left="8dp"
            app:corner_radius_top_right="8dp"
            app:icon_src_normal="@mipmap/icon_account" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#cbf7eaea" />

        <com.ruffian.library.widget.REditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:drawablePadding="4dp"
            android:hint="请输入账号"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#122a2d"
            android:textColorHint="#ccc"
            app:background_normal="#6e919090"
            app:background_pressed="@color/colorAccent"
            app:corner_radius_bottom_left="8dp"
            app:corner_radius_bottom_right="8dp"
            app:icon_src_normal="@mipmap/icon_account" />


        <com.ruffian.library.widget.REditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:drawablePadding="4dp"
            android:hint="请输入账号"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#122a2d"
            android:textColorHint="#919090"
            app:background_normal="#6e919090"
            app:corner_radius="4dp"
            app:icon_src_normal="@mipmap/icon_account" />

        <com.ruffian.library.widget.RTextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="注册"
            android:textColor="#122a2d"
            app:background_normal="#557479"
            app:background_pressed="#132429"
            app:corner_radius="2dp" />

    </LinearLayout>

</RelativeLayout>